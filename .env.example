# Puerto de la aplicacion (cambia al que necesites)
APP_PORT=8080

# Clave secreta para JWT (obligatorio, minimo 32 caracteres)
SESSION_SECRET=tu-clave-secreta-muy-larga-y-segura-minimo-32-caracteres

# Base de datos PostgreSQL
# Para docker-compose local, no necesitas cambiar esto
# Para Docker Swarm o produccion, usa tu propia URL
DATABASE_URL=postgresql://postgres:postgres@db:5432/pdfapi

# Credenciales PostgreSQL (solo para docker-compose/swarm)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pdfapi

# S3 Storage (opcional - si no configuras, usa almacenamiento local)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=pdf-templates

# Docker Swarm - Configuracion adicional
REGISTRY=tu-registry.com/
TAG=latest
REPLICAS=2
